{{!-- app/templates/components/location-section.hbs --}}
<section class="location-section" id="locations">
  <div class="section-overlay"></div>
  
  <div class="location-container">
    <div class="section-header">
      <h2 class="section-title">
        <span class="title-accent">Our Ministry Centers</span>
        <span class="title-main">Locations & Service Times</span>
      </h2>
      <div class="title-divider"></div>
    </div>

    <div class="location-grid">
      {{!-- Map Container --}}

      {{!-- Locations List --}}
{{!-- Update locations-list section --}}
<div class="locations-list">
  {{#each this.locations as |location index|}}
    <div class="location-card" data-aos="fade-left" data-aos-delay="{{multiply index 100}}">
      <div class="card-header">
        <div class="location-marker">
          {{svg-jar "map-pin" class="marker-icon"}}
        </div>
        <h3 class="location-name">{{location.name}} {{svg-jar "tmc-logo" class="tmc-logo"}}</h3>
      </div>
      
{{!-- Update the card-body section --}}
<div class="card-body">
  <div class="location-info">
    <div class="info-item">
      {{svg-jar "location" class="info-icon"}}
      <p class="info-text">{{location.address}}</p>
    </div>
    <div class="info-item">
      {{svg-jar "clock" class="info-icon"}}
      <p class="info-text">{{location.serviceTimes}}</p>
    </div>
    {{!-- Added Contact Info --}}
    <div class="info-item">
      {{svg-jar "phone" class="info-icon"}}
      <a href="tel:{{location.phone}}" class="info-text">{{location.phone_a}} |</a>
      <a href="tel:{{location.phone_b}}" class="info-text">{{location.phone_b}}</a>
    </div>
    <div class="info-item">
      {{!svg-jar "email" class="info-icon"}}
      <a href="mailto:{{location.email}}" class="info-text">{{location.email}}</a>
    </div>
  </div>
  
  <div class="card-footer">
    <a 
      href="{{location.directions}}" 
      class="cta-directions"
      target="_blank"
      rel="noopener noreferrer"
    >
      Get Directions
      {{svg-jar "arrow-right" class="arrow-icon"}}
    </a>
    <a
      href="{{location.facebookUrl}}"
      class="facebook-link"
      target="_blank"
      rel="noopener noreferrer"
      aria-label="Facebook page"
    >
      {{svg-jar "facebook" class="facebook-icon"}}
    </a>
  </div>
</div>
    </div>
  {{/each}}
</div>
    </div>
  </div>
</section>