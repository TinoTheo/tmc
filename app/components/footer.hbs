<footer class="site-footer" id="footer">
  <div class="footer-content">
    {{!-- Quick Links --}}
    <div class="footer-section">
      <h3 class="footer-heading">Quick Links</h3>
      <nav class="footer-nav">
        {{#each this.footerLinks as |link|}}
          <a href="{{link.url}}" class="footer-link">{{link.label}}</a>
        {{/each}}
      </nav>
    </div>
  </div>

  {{!-- Bottom Bar --}}
  <div class="footer-bottom">
    <div class="copyright">
      Â© {{this.currentYear}} The Traditional Methodist Church {{svg-jar "tmc-logo" class="tmc-logo"}}
    </div>
    <div class="social-links">
      {{#each this.socialLinks as |social|}}
        <a 
          href="{{social.url}}" 
          class="social-link"
          target="_blank"
          rel="noopener noreferrer"
          aria-label="{{social.name}}"
        >
          {{svg-jar social.icon class="social-icon"}}
        </a>
      {{/each}}
    </div>
  </div>
</footer>